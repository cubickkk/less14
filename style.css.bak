@import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');
*{
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

body {
	 font-family: "Permanent Marker", cursive;
	 
}
.header {
	background:#da0018;
	height: 100vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	
}
.header_logo {
	background: url('./images/m.jpg');
	background-repeat: no-repeat;
	background-size: 200px 200px;
	width: 200px;
	height: 200px;
	border-radius: 50%;
	box-shadow: 0 0 0 5px #76000d, 0 0 0 10px #ffffff;
	transition: border-radius 1s ease, 
	box-shadow 0.5s 2s linear, 
	transform 0.5s 1s linear, 
	background 1s 2s ease-out;
}
.header_name{
	color: #ffffff;
	font-size:130px;
	cursor: pointer;
	text-shadow: 2px 2px 0 #4A0008, -2px -2px 0 #4a0008;
	text-transform: uppercase;
	display:flex;
}
.header:hover .header_logo{
	border-radius: 0px;
	box-shadow: 0 0 0 5px #418acd, 0 0 0 10px #ffffff;
	transform: scale(1.1) rotate(45deg);
	background: url('./images/mario1.jpg');
}
.m{
	transform-origin: 0% 100%;
	transition: transform 1s linear;
}
.header:hover .m{
	transform: scale(0.8) rotate(-45deg);
	
}
.a{
	transform-origin: 0% 100%;
	transition: transform 1s ease-in-out;
}
.header:hover .a{
	transform: scale(1, 2.3) skewX(45deg);
	
}
.r{
	transform-origin: 0% 100%;
	transition: transform 1s  ease-in-out;
}
.header:hover .r{
	transform: rotateY(600deg);
	
}
.i{
	transform-origin: bottom center;
	transition: transform 1s ease-in-out;
}
.header:hover .i{
	transform: scale(0.1,0.1);
	
}
.o{
	transform-origin: 0% 100%;
	transition: transform 1s ease-in;
}
.header:hover .o{
	transform: scale(2,0.5) translateY(-150px) rotateY(360deg);
	
}







